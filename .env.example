# EasyDo HRMS MCP Server Environment Variables
# Copy this file to .env and fill in the values
# .env is REQUIRED for the server to work

# ===========================================
# SUPABASE (REQUIRED - Session Management)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# ===========================================
# DATABASE MODE (REQUIRED)
# ===========================================
# Options: "n8n" or "direct"
# - n8n: Execute queries via n8n webhook (default, works from anywhere)
# - direct: Connect directly to PostgreSQL (requires network access to DB)
DB_MODE=n8n

# ===========================================
# n8n MODE SETTINGS (required if DB_MODE=n8n)
# ===========================================
N8N_WEBHOOK_PROD=
N8N_WEBHOOK_STAGING=

# ===========================================
# DIRECT MODE SETTINGS (required if DB_MODE=direct)
# ===========================================
# Production database
DB_HOST_PROD=localhost
DB_PORT_PROD=5432
DB_NAME_PROD=hrms
DB_USER_PROD=postgres
DB_PASSWORD_PROD=

# Staging database
DB_HOST_STAGING=localhost
DB_PORT_STAGING=5432
DB_NAME_STAGING=hrms_staging
DB_USER_STAGING=postgres
DB_PASSWORD_STAGING=

# ===========================================
# API SETTINGS (REQUIRED for authentication)
# ===========================================
API_BASE_PROD=
API_BASE_STAGING=

# Device headers for API calls
DEVICE_ID=
DEVICE_TYPE=

# ===========================================
# SUPER ADMIN (OPTIONAL)
# ===========================================
# Phone number that bypasses all RBAC, no OTP required
SUPER_ADMIN_PHONE=

# ===========================================
# MCP TRANSPORT (OPTIONAL - for remote hosting)
# ===========================================
# Options: "stdio" (default) or "sse"
# - stdio: Standard input/output (local Claude Desktop/Code)
# - sse: Server-Sent Events (remote hosting, FastMCP Cloud)
# MCP_TRANSPORT=stdio
# MCP_HOST=0.0.0.0
# MCP_PORT=8080
