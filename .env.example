# EasyDo HRMS MCP Server Environment Variables
# Copy this file to .env and fill in the values
# .env is REQUIRED for the server to work

# n8n Webhook URLs for database queries (REQUIRED)
N8N_WEBHOOK_PROD=
N8N_WEBHOOK_STAGING=

# API Base URLs for authentication (REQUIRED)
API_BASE_PROD=
API_BASE_STAGING=

# Device headers for API calls (REQUIRED)
DEVICE_ID=
DEVICE_TYPE=

# Super Admin user ID (bypasses all RBAC)
SUPER_ADMIN_USER_ID=
